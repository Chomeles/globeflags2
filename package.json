{
  "name": "globeflags2",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "worker:dev": "wrangler dev",
    "deploy": "npm run build && wrangler deploy --assets ./dist",
    "build": "npm run clean && npm run build:worker && npm run build:client && npm run build:assets",
    "build:worker": "esbuild src/index.ts --bundle --outfile=dist/worker.js --format=esm",
    "build:client": "vite build src/react-app --outDir ../../dist/assets",
    "build:assets": "powershell -Command \"Copy-Item -Path public/* -Destination dist/ -Recurse -Force\"",
    "clean": "powershell -Command \"Remove-Item -Path dist -Recurse -Force -ErrorAction SilentlyContinue; New-Item -ItemType Directory -Path dist -Force\"",
    "start": "npm run worker:dev"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.4.0",
    "@react-three/fiber": "^8.15.19",
    "@react-three/postprocessing": "^2.16.2",
    "@types/react-dom": "^18.2.19",
    "hono": "^4.1.3",
    "postprocessing": "^6.35.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.162.0",
    "three-geojson-geometry": "^2.1.1"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^0.1.14",
    "@cloudflare/workers-types": "^4.20240320.1",
    "@react-three/drei": "^9.102.6",
    "@types/geojson": "^7946.0.14",
    "@types/react": "^18.2.66",
    "@types/three": "^0.162.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.20.2",
    "vite": "^6.2.2",
    "wrangler": "^4.3.0"
  }
}
